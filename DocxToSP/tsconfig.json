{
  "extends": "./node_modules/@microsoft/rush-stack-compiler-3.7/includes/tsconfig-web.json",
  "compilerOptions": {
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "inlineSources": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@microsoft",
      "./node_modules/@types"

    ],
    "types": [
      "es6-promise",
      "webpack-env",
      "reflect-metadata",
      "jest"
    ],
    "lib": [
      "es5",
      "dom",
      "es2015.collection",
      "esnext",
      "es6",
      "DOM.Iterable",
      "ES2015",
      "dom.iterable",
      "es2015.iterable"
    ]
  },
  "include": [
    "src/**/*.ts", "src/webparts/docxjs/models/docxGenerator.tsx", "src/webparts/docxjs/models/hooks/formHandler.tsx"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/*"
  ]
}
